@using MVC.Models;
@model Kitap
@{
    ViewBag.Title = "Kitap";
}


<div>
    <h2><font color="red"><b>KİTAP BİLGİLERİ</b></font></h2>
    <h4><font color="red">Seri No:</font><i>@Model.SeriNo</i></h4>
    <h4><font color="red">Yazar Yaşı:</font><i>@Model.Yaş</i></h4>
    <h4><font color="red">Yazar Adı:</font><i>@Model.YazarAdi</i></h4>
    <h4><font color="red">Kitap Adı:</font><i>@Model.KitapAdi</i></h4>
</div>




@using (Html.BeginForm())
{

<p>Seri No:</p>@Html.TextBoxFor(x=>x.SeriNo)<br />
<p>Kitap Adı:</p>@Html.TextBoxFor(x=>x.KitapAdi)<br />
<p>Yazar Adı:</p>@Html.TextBoxFor(x=>x.YazarAdi)<br />
<p>Yazar Yaşı:</p>@Html.TextBoxFor(x=>x.Yaş)<br />





}